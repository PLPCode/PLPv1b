/*Key Code*/
#define TextAll keybd_event(VK_CONTROL, 0x9d, 0, 0);keybd_event(VkKeyScan('A'),0x9e,0 , 0);
#define AltTab keybd_event(VK_MENU, 0xb8, 0, 0); keybd_event(VK_TAB, 0x8f, 0, 0);
#define VolumeDown keybd_event(VK_VOLUME_DOWN, 0xAE, 0, 0);
#define VolumeUp keybd_event(VK_VOLUME_UP, 0xAF, 0, 0);
#define VolumeMute keybd_event(VK_VOLUME_MUTE, 0xAD, 0, 0);
#define CaspLock keybd_event(VK_CAPITAL, 0x14, 0, 0);
#define NumLock keybd_event(VK_NUMLOCK, 0x90, 0, 0);
#define ScreenShot keybd_event(VK_LWIN, 0x5B, 0, 0); keybd_event(VK_SNAPSHOT, 0x2C, 0, 0);
#define LockScreen keybd_event(VK_LWIN, 0x5B, 0, 0); keybd_event(VkKeyScan('L'), 0xA6, 0, 0);
#define ThisPc keybd_event(VK_LWIN, 0x5B, 0, 0); keybd_event(VkKeyScan('E'), 0x92, 0, 0);
#define RunWindow keybd_event(VK_LWIN, 0x5B, 0, 0); keybd_event(VkKeyScan('R'), 0x93, 0, 0);
#define Minimize keybd_event(VK_LWIN, 0x5B, 0, 0); keybd_event(VkKeyScan('M'), 0xB2, 0, 0);
